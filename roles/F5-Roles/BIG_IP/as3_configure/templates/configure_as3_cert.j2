{
	"class": "AS3",
	"action": "deploy",
	"persist": true,
	"declaration": {
		"class": "ADC",
		"schemaVersion": "3.0.0",
		"id": "{{item.name}}",
		"label": "Configure Web-Apps via AS3",
		"remark": "HTTPS with Pool",
		"{{ item.name }}": {
			"class": "Tenant",
			"WebApp-VIP": {
				"class": "Application",
				"{{ item.name }}": {
					"class": "Service_HTTPS",
					"virtualPort": 443, 
					"virtualAddresses": [
						"{{ item.ip }}"
					],
					"profileHTTP": "basic", 
					"pool": "{{ item.name }}_pool",
          			"redirect80": true,
					"serverTLS": "{{ item.name }}_cert",
          			"persistenceMethods": []
				},
				"{{ item.name }}_pool": {
					"class": "Pool",
          			"minimumMembersActive": 0,
          			"minimumMonitors": "all",
					"monitors": [
						"http"
					],
					"members": [
				   		{% for port in item.service_ports %}{ 
							"servicePort": {{port}},
							"serverAddresses": [
								{% set comma = joiner(",") %}
								{% for mem in item.pool_members %}
								{{comma()}} "{{ mem }}"
								{% endfor %}
							]}{{ ", " if not loop.last else ""}}
						{% endfor %}]
				},
				"{{ item.name }}_cert": {
					"class": "TLS_Server",
					"certificates": [{
						"certificate": "{{ item.name }}_crt"
					}]
				},
				"{{ item.name }}_crt": {
					"class": "Certificate",
					"remark": "in practice we recommend using a passphrase",
						"certificate": {
							"base64": "{{ device_cert_base64 }}"
						},
						"privateKey": {
							"base64": "{{ device_key_base64 }}"
						}
				}
			}
		}
	}
}
